<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        tools:targetApi="lollipop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/expenses_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textSize="25sp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignBottom="@id/expenses_edit_text"
            android:background="@android:color/black"
            />
        <Button
            android:id="@+id/expenses_select_category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/expenses_edit_text"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:text="@string/spinner_category_tag"
            android:textSize="15sp"
            />
        <Button
            android:id="@+id/expenses_select_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/expenses_select_category"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="@string/spinner_type_tag"
            android:textSize="15sp"
            android:visibility="gone"

            />
        <GridView
            android:id="@+id/expenses_calc_button_field"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_alignParentBottom="true"
            android:stretchMode="spacingWidthUniform"
            android:verticalSpacing="30dp"
            android:numColumns="3"
            android:columnWidth="100dp"
            />
        <Button
            android:id="@+id/create_new_category"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_above="@id/expenses_calc_button_field"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/circle_add_button_bg"
            android:contentDescription="@string/create_new_category"
            />
    </RelativeLayout>
</LinearLayout>